<h1>Let's create a new song here!</h1>

<form action="/songs" method="post">

<p><label for="song_name">Name: </label>
<input type="text" name="song[name]" id="song_name" /></p>

<% Genre.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%=genre.name%>
<% end %>

<p><label for="artist_name">Artist Name: </label>
<input type="text" name="artist[name]" id="artist_name" /></p>


<input type="submit" value="Create">
</form>
